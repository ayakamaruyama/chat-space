.main-chat
  .main-header
    .main-header__left-header
      .main-header__left-header__title
        =@group.name
        .main-header__left-header__member
          %ul.left-header__members
            %li.member
              - @group.users.each do |user|
                =user.name
    .main-header__right-header  
      .main-header__right-header__button
        = link_to edit_group_path(@group) do
          -# = icon('fas','fan',class: 'main-header__right-header__button')
          Edit
  .messages
    = render @messages
    
  .form
    = form_for [@group, @message] do |f|
      .form__box
        = f.text_field :content, class: 'form__box__message', placeholder: 'type a message'
        = f.label :image, class: 'form__box__submit' do
          = icon('fas','image')
          = f.file_field :image, class: 'hidden'
      = f.submit 'SEND', class: 'form__box__button'



